{{#each this}}
  <div class='container'>
    <div class='card-info'>
      <h2>{{name}}</h2>
      <span class='info'>Capital:<span class='info-index'> {{capital}}</span></span>
      <span class='info'>Population:<span class='info-index'> {{population}}</span></span>
      <span class='info'>Languages: </span>
      <ul>{{#each languages}}
          <li>{{name}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='img-box'>
    <img src='{{flags.png}}' alt='{{capital}}' width='320' />
  </div>
{{/each}}